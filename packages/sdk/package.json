  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.2",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.2"
  },
  "dependencies": {
    "@ckb-lumos/base": "^0.23.0",
    "@ckb-lumos/codec": "^0.23.0",
    "@ckb-lumos/lumos": "^0.23.0",
    "@joyid/nostr": "^0.1.5",
    "@rust-nostr/nostr-sdk": "^0.32.1"
  }
